@model IEnumerable<InLifeCMS.ViewModels.ProductDetailsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section id="column-selectors">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row w-100">
                            <div class="col-md-6">
                                <h4 class="card-title text-title">Product's Detail List</h4>
                            </div>
                            <div class="col-md-6">
                                <p class="pull-right">
                                    <a asp-action="Create" class="btn btn-primary mb-2"><i class="feather icon-plus"></i>&nbsp; Add Product's Detail</a>
                                </p>
                            </div>
                            <div class="col-md-12">
                                <p style="text-align:center;">     <span style="color:red;"><b>@ViewBag.error</b></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="card-body card-dashboard">
                            <div class="table-responsive">
                                <table class="table table-striped zero-configuration">

                                    <thead>
                                        <tr>
                                            <th>
                                                Product Image
                                            </th>
                                            <th>
                                                Cases Covered
                                            </th>
                                            <th>
                                                Benefit Type
                                            </th>
                                            <th>
                                                Benefit Limit
                                            </th>
                                            <th>
                                                Age Eligibility
                                            </th>
                                            <th>
                                                Number Of Availments
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div style="width:150px;height:150px;">
                                                        <img src="data:image/jpeg;base64, @item.strProductImg" style="width:100%" />
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.strCasesCovered)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.strBenefitType)
                                                </td> 
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.strBenefitLimit)
                                                </td> 
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.strAgeEligibility)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.strNumberOfAvailments)
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.intProductDetailId" title="Edit"><i class="feather icon-edit"></i></a> |
                                                    <a asp-action="Details" asp-route-id="@item.intProductDetailId" title="Details"><i class="feather icon-eye"></i></a> |
                                                    <a asp-action="Delete" asp-route-id="@item.intProductDetailId" title="Delete"><i class="feather icon-delete"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>
                                                Product Image
                                            </th>
                                            <th>
                                                Cases Covered
                                            </th>
                                            <th>
                                                Benefit Type
                                            </th>
                                            <th>
                                                Benefit Limit
                                            </th>
                                            <th>
                                                Age Eligibility
                                            </th>

                                            <th>
                                                Number Of Availments
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


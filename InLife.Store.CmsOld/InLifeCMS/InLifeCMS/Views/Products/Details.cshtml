@model InLifeCMS.ViewModels.ProductsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section class="users-edit">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="displayAccount" aria-labelledby="account-tab" role="tabpanel">
                            <div class="media mb-2">
                                <a class="mr-2 my-25" href="#">
                                    <div style="width:200px;height:200px;overflow:hidden;">
                                        <img id="primeHero_img" src="data:image/jpeg;base64, @Model.strProductImg" alt="users avatar" class="users-avatar-shadow rounded" style="width:100%;border:solid" />
                                        <label class="control-label text-primary">Product Image</label>
                                    </div>
                                </a>
                                <div class="media-body mt-50">
                                    <h4 class="media-heading text-primary">@Model.strProductCode</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label><b class="text-primary">Product Name : </b>@Model.strProductName</label>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label><b class="text-primary">Product Price :</b> @Model.strProductPrice</label>
                                    </div>
                                </div>
                                @{
                                    if (Model.strPriceWithOffer != null && Model.strPriceWithOffer != "")
                                    {
                                        <div class="col-12 col-sm-6">
                                            <div class="form-group">
                                                <label><b class="text-primary">Product Price With Offer:</b> @Model.strPriceWithOffer</label>
                                            </div>
                                        </div>
                                    }
                                }

                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label><b class="text-primary">Product Sort #:</b> @Model.intSortNum</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label><b class="text-primary">Product Short Description :</b>  @Html.Raw(Model.strShortDescription)</label>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">

                                    <div class="form-group">
                                        <label><b class="text-primary">Created Date : </b>@Model.dteCreatedDate.ToShortDateString()</label>
                                    </div>
                                    <div class="form-group">
                                        <label><b class="text-primary">Created By :</b> @Model.strCreatedByUser</label>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label><b class="text-primary">Updated Date : </b>@Model.dteUpdatedDate?.ToShortDateString()</label>
                                    </div>
                                    <div class="form-group">
                                        <label><b class="text-primary">Updated By :</b> @Model.strUpdatedByUser</label>
                                    </div>
                                </div>
                                <div class="row w-100">
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <a asp-action="Edit" class="btn btn-primary glow mb-1 ml-1 mb-sm-0 mr-0 mr-sm-1" asp-route-id="@Model.intProductId">Edit</a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group pull-right">
                                            <a asp-action="Index" class="btn btn-secondary glow mb-1  mb-sm-0 mr-0 mr-sm-1">Back to List</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

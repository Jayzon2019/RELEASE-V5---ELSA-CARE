@model IEnumerable<InLifeCMS.ViewModel.FaqViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section id="column-selectors">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row w-100">
                            <div class="col-md-6">
                                <h4 class="card-title text-title">Faq List</h4>
                            </div>
                            <div class="col-md-6">
                                <p class="pull-right">
                                    <a asp-action="Create" class="btn btn-primary mb-2"><i class="feather icon-plus"></i>&nbsp; Add new Faq</a>
                                </p>
                            </div>
                            <div class="col-md-12">
                                <p style="text-align:center;">     <span style="color:red;"><b>@ViewBag.error</b></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="card-body card-dashboard">
                            <div class="table-responsive">
                                <table class="table table-striped zero-configuration">

                                    <thead>
                                        <tr>
                                            <th>
                                                Category
                                            </th>
                                            <th>
                                                Question
                                            </th>
                                            <th>
                                                Answer
                                            </th>
                                            <th>
                                                Sort #
                                            </th>
                                            <th>
                                                Created Date
                                            </th>
                                            <th>
                                                Created By
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strFaqCat)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strFaqQuestion)
                                            </td>
                                            <td>
                                                @Html.Raw(item.strFaqAnswer)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.intSortNum)
                                            </td>
                                            <td>
                                                @item.dteCreatedDate.ToShortDateString()
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strCreatedByUser)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.intFaqId" title="Edit"><i class="feather icon-edit"></i></a> |
                                                <a asp-action="Details" asp-route-id="@item.intFaqId" title="Details"><i class="feather icon-eye"></i></a> |
                                                <a asp-action="Delete" asp-route-id="@item.intFaqId" title="Delete"><i class="feather icon-delete"></i></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>
                                                Category
                                            </th>
                                            <th>
                                                Question
                                            </th>
                                            <th>
                                                Answer
                                            </th> 
                                            <th>
                                                Sort #
                                            </th>
                                            <th>
                                                Created Date
                                            </th>
                                            <th>
                                                Created By
                                            </th>
                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
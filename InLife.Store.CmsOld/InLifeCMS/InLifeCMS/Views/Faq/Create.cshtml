@model InLifeCMS.ViewModel.FaqViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-title">Create New Faq</h4>
            </div>
            <div class="card-content">
                <div class="card-body card-dashboard">
                    <div class="col-md-12">
                        <form asp-action="Create" enctype="multipart/form-data" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <p style="text-align:center;"><span style="color:red;"><b>@ViewBag.error</b></span></p>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Faq Category</label>
                                            <select class="form-control select2" name="intFaqCatId" required data-validation-required-message="Faq Category Is required">
                                                @foreach (var faq in ViewBag.faqCatDrp)
                                                {
                                                    <option value="@faq.intFaqCatId">@faq.strFaqCategory</option>
                                                }
                                            </select>
                                            <span asp-validation-for="strFaqQuestion" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Faq Question</label>
                                            <input asp-for="strFaqQuestion" class="form-control" placeholder="Enter Faq Question" required data-validation-required-message="Faq Question is required" />
                                            <span asp-validation-for="strFaqQuestion" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Sort Number</label>
                                            <input asp-for="intSortNum" class="form-control" placeholder="Enter Sort Number" required data-validation-required-message="Sort Number is required" />
                                            <span asp-validation-for="intSortNum" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Faq Answer</label>
                                            <textarea name="strFaqAnswer" id="summernote" required data-validation-required-message="Faq Answer is required"></textarea>
                                            <span asp-validation-for="strFaqAnswer" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row w-100">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group pull-right">
                                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#summernote').summernote();
    });
</script>
                                            <input asp-for="strArthoscopic" class="form-control" placeholder="Arthroscopic Procedures, Orthopedic Arthroscopy" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">

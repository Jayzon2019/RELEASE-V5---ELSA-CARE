                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Cases Covered</label>
                                            <input asp-for="strCasesCovered" class="form-control" placeholder="Enter Cases Covered" />
                                            <span asp-validation-for="strCasesCovered" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Benefit Type</label>
                                            <input asp-for="strBenefitType" class="form-control" placeholder="Enter Benefit Type" />
                                            <span asp-validation-for="strBenefitType" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Age Eligibility</label>
                                            <input asp-for="strAgeEligibility" class="form-control" placeholder="Enter Age Eligibility" />
                                            <span asp-validation-for="strAgeEligibility" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Coverage </label>
                                            <input asp-for="strCoverage" class="form-control" placeholder="Coverage" />
                                            <span asp-validation-for="strCoverage" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-12">

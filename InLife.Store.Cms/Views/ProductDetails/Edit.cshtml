                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Dental Consultation</label>
                                            <input asp-for="strDentalConsultation" class="form-control" placeholder="Dental Consultation" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Dental services benefit</label>
                                            <input asp-for="strDentalServicesBenefit" class="form-control" placeholder="Dental services benefit" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Hospital Network</label>
                                            <input asp-for="strHospitalNetwork" class="form-control" placeholder="Hospital Network " />

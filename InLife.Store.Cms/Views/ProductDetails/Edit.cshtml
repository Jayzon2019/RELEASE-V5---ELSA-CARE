                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label class="control-label text-secondary">Products</label>
                                            <select class="form-control select2" name="intProductId">
                                                @foreach (var pro in ViewBag.products)
                                                {
                                                    if (pro.intProductId == Model.intProductId)
                                                    {
                                                        <option selected="selected" value="@pro.intProductId">@pro.strProductName</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@pro.intProductId">@pro.strProductName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="intProductId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

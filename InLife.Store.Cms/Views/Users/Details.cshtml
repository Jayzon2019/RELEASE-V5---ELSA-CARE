@model UserViewModel

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="users-edit">
	<div class="card">
		<div class="card-content">
			<div class="card-body">
				<div class="tab-content">
					<div class="tab-pane active" id="displayAccount" aria-labelledby="account-tab" role="tabpanel">
						
						<div class="row">
							<div class="col-12 col-sm-6">
								
								<div class="form-group">
									<div class="controls">
										<label class="text-secondary">First Name</label> 
										<h4>@Model.FirstName</h4>
									</div>
									
								</div>
								<div class="form-group">
									<div class="controls">
										<label class="text-secondary">First Name</label>
										<h4>@Model.LastName</h4>
									</div>
									
								</div>
								<div class="form-group">
									<div class="controls">
										<label class="text-secondary">Email</label>
										<h4>@Model.Email</h4>
									</div>
								</div>
								<div class="form-group">
									<div class="controls">
									<label class="text-secondary">Roles</label>
									<div>
										@for (var i = 0; i < Model.Roles.Count; i++)
										{
											<span style="display:inline-block; line-height:2em; padding:0 1em; margin-right:0.5em; border-radius:4px; background:purple; color:#fff;">@Model.Roles[i].Name</span>
										}
									</div>
									</div>
								</div>
								<div class="form-group">
									<div class="controls">
										<label class="text-secondary">Is Locked?</label>
										<h4>@(Model.IsLocked ? "YES" : "NO")</h4>
									</div>
								</div>
							</div>

							
							@*
							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">Gender : </b>@Model.strGender</label>
								</div>
							</div>
							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">E-mail : </b>@Model.Email</label>
								</div>
							</div>
							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">Password : </b>@Model.Password</label>
								</div>
							</div>
							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">Phone : </b>@Model.Phone</label>
								</div>
							</div>
							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">Role : </b>@Model.strUserRole</label>
								</div>
							</div>
							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">Created Date : </b>@Model.CreatedDate</label>
								</div>
							</div>
							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">Created By :</b> @Model.CreatedByName</label>
								</div>
							</div>
							@{
								if (Model.UpdatedDate != null)
								{
									<div class="col-12 col-sm-6">
										<div class="form-group">
											<label><b class="text-primary">Updated Date : </b>@Model.UpdatedDate</label>
										</div>
									</div>
									<div class="col-12 col-sm-6">
										<div class="form-group">
											<label><b class="text-primary">Updated By :</b> @Model.UpdatedByName</label>
										</div>
									</div>
								}
							}

							<div class="col-12 col-sm-6">
								<div class="form-group">
									<label><b class="text-primary">Activation Date :</b> @Model.dteActivationDate.ToShortDateString()</label>
								</div>
							</div>
							*@

							<div class="row w-100">
								<div class="col-md-6">
									<div class="form-group">
										<a asp-action="Edit" class="btn btn-primary glow mb-1 ml-1 mb-sm-0 mr-0 mr-sm-1" asp-route-id="@Model.Id">Edit</a>
										<a asp-action="Index" class="btn btn-secondary glow mb-1  mb-sm-0 mr-0 mr-sm-1">Back to List</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

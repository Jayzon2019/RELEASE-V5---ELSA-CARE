@model InLife.Store.Cms.ViewModels.PrimeCareViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section class="users-edit">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label><b class="text-primary">Prime Care File : </b> <a style="color:black;" href="data:application/pdf;base64, @Model.strPrimeCareFile" download="download"> @Model.strPrimeCareFileName</a></label>
                                        <span style="font-size:8px;padding-left:10px;">
                                            (Click File to Donwload)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label><b class="text-primary">File Description:</b> @Model.strPrimeCareFileDescription</label>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">

                                    <div class="form-group">
                                        <label><b class="text-primary">Created Date : </b>@Model.dteCreatedDate.ToShortDateString()</label>
                                    </div>
                                    <div class="form-group">
                                        <label><b class="text-primary">Created By :</b> @Model.strCreatedByUser</label>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label><b class="text-primary">Updated Date : </b>@Model.dteUpdatedDate?.ToShortDateString()</label>
                                    </div>
                                    <div class="form-group">
                                        <label><b class="text-primary">Updated By :</b> @Model.strUpdatedByUser</label>
                                    </div>
                                </div>
                                <div class="row w-100">
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <a asp-action="Edit" class="btn btn-primary glow mb-1 ml-1 mb-sm-0 mr-0 mr-sm-1" asp-route-id="@Model.intPrimeCareId">Edit</a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group pull-right">
                                            <a asp-action="Index" class="btn btn-secondary glow mb-1  mb-sm-0 mr-0 mr-sm-1">Back to List</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

@model PrimeCareViewModel

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title text-title">Edit Prime care File</h4>
				<a style="color:black;" href="data:application/pdf;base64, @Model.PrimeCareFile" download="download"> <sapn class="control-label text-secondary">View Prime Care File :</sapn> @Model.PrimeCareFileName</a>
			</div>
			<div class="card-content">
				<div class="card-body card-dashboard">
					<div class="col-md-12">
						<form asp-action="Edit" id="form" novalidate enctype="multipart/form-data">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<p style="text-align:center;"><span style="color:red;"><b>@ViewBag.error</b></span></p>
							<input type="hidden" asp-for="Id" />
							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<div class="controls">
											<label class="control-label text-secondary">Upload New Prime Care File</label>
											<input type="file" title="search file" onchange="ValidateFile()" class="form-control" id="file" name="file" />
											<span asp-validation-for="PrimeCareFile" class="text-danger"></span><span style="display:none;" id="fileError" class="text-danger">Please upload a pdf file</span>
										</div>
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group">
										<div class="controls">
											<label class="control-label text-secondary">Prime Care File Name</label>
											<input asp-for="PrimeCareFileName" class="form-control" placeholder="Enter Prime Care File Name" required data-validation-required-message="Prime Care File Name is required" />
											<span asp-validation-for="PrimeCareFileName" class="text-danger"></span>
										</div>
									</div>
								</div>
								<div class="col-sm-12">
									<div class="form-group">
										<div class="controls">
											<label class="control-label text-secondary">File Description</label>
											<input asp-for="PrimeCareFileDescription" class="form-control" placeholder="Enter File Description" required data-validation-required-message="File Description is required" />
											<span asp-validation-for="PrimeCareFileDescription" class="text-danger"></span>
										</div>
									</div>
								</div>
							</div>
							<div class="row w-100">
								<div class="col-md-6">
									<div class="form-group">
										<input type="submit" onclick="myValidation()" value="Update" class="btn btn-primary" />
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group pull-right">
										<a asp-action="Index" class="btn btn-secondary">Back to List</a>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">

	function ValidateFile()
	{
		var ext = $('#file').val().split('.').pop().toLowerCase();
		if (ext != null && ext != "")
		{
			if ($.inArray(ext, ['pdf']) == -1)
			{
				$("#fileError").show();
				$("#file").addClass("invalid");
				return false;
			} else
			{
				$("#fileError").hide();
				$("#file").removeClass("invalid");
				return true;
			}
		}
		else
		{
			$("#fileError").hide();
			$("#file").removeClass("invalid");
			return true;
		}
	}

	function myValidation()
	{
		if (ValidateFile() == false)
		{
			event.preventDefault();
			return false;
		}
	}
</script>

{
	"Logging":
	{
		"LogLevel":
		{
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},

	"AllowedHosts": "*",

	"AllowedOrigins":
	[
		"http://localhost:4200",
		"https://localhost:4200",
		"https://dev-inlife-estore.azurewebsites.net"
	],

	"ConnectionStrings":
	{
		"DefaultConnection": "Server=localhost;Database=InLife.Store;Trusted_Connection=True;MultipleActiveResultSets=true",
		"_DefaultConnection": "Server=tcp:projectgrey.database.windows.net,1433;Initial Catalog=InLife.Store;Persist Security Info=False;User ID=USERNAME;Password=PASSWORD;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
	},

	"Authentication":
	{
		"Authority": "https://localhost:5000",
		"ClientId": "inlife.store.api",
		"ClientSecret":  "SECRET"
	},

	"Smtp":
	{
		"Host": "smtp-relay.sendinblue.com",
		"Port": 587,
		"Username": "",
		"Password": "",
		"EnableSsl": true
	},

	"Email":
	{
		"ErrorNotification":
		{
			"SenderName": "InLife Store Identity - #SERVER#",
			"SenderEmail": "do-not-reply@projectgrey.net",
			"Recipients":
			[
				"info@projectgrey.net"
			],
			"Subject": "InLife Store Identity : An error has occurred",
			"TemplateFile": "ErrorNotification.html"
		},

		"AccountVerification":
		{
			"SenderName": "InLife Store Identity",
			"SenderEmail": "do-not-reply@projectgrey.net",
			"Subject": "Verify your email address",
			"TemplateFile": "AccountVerification.html"
		},

		"AccountRecovery":
		{
			"SenderName": "InLife Store Identity",
			"SenderEmail": "do-not-reply@projectgrey.net",
			"Subject": "Recover your account",
			"TemplateFile": "AccountRecovery.html"
		}
	}
}
